<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3F3"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/brown"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="end"
            app:srcCompat="@drawable/baseline_close_24"
            app:tint="@android:color/white">

        </ImageView>

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"

            android:gravity="start"
            android:text="Đăng xe"
            android:textColor="#ffffff"
            android:textSize="25dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="80dp">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="@color/white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rl_Company"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@id/rl_centrel"
                        android:padding="10dp">


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:paddingEnd="20dp"
                            android:text="Hãng Xe"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/txt_hangXe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@+id/btn_company"
                            android:text="Chọn"
                            android:textColor="@color/black" />

                        <ImageView
                            android:id="@+id/btn_company"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/baseline_navigate_next_24" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#888888" />

                    <RelativeLayout
                        android:id="@+id/rl_model"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:padding="10dp">


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:paddingEnd="20dp"
                            android:text="Dòng Xe"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/txt_model"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@+id/btn_model"
                            android:text="Chọn"
                            android:textColor="@color/black" />

                        <ImageView
                            android:id="@+id/btn_model"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/baseline_navigate_next_24" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#888888" />

                    <RelativeLayout
                        android:id="@+id/rl_year"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:padding="10dp">


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:paddingEnd="20dp"
                            android:text="Năm sản xuất"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/txt_year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@+id/btn_year"
                            android:text="Chọn"
                            android:textColor="@color/black" />

                        <ImageView
                            android:id="@+id/btn_year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/baseline_navigate_next_24" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#888888" />

                    <RelativeLayout
                        android:id="@+id/rl_gear"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:padding="10dp">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:paddingEnd="20dp"
                            android:text="Hộp số"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/txt_gear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@+id/btn_gear"
                            android:text="Chọn"
                            android:textColor="@color/black" />

                        <ImageView
                            android:id="@+id/btn_gear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/baseline_navigate_next_24" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#888888" />

                    <RelativeLayout
                        android:id="@+id/rl_engine"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@id/rl_centrel"
                        android:padding="10dp">


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:paddingEnd="20dp"
                            android:text="Động cơ"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/txt_engine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@+id/btn_engine"
                            android:text="Chọn"
                            android:textColor="@color/black" />

                        <ImageView
                            android:id="@+id/btn_engine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/baseline_navigate_next_24" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#888888" />

                    <RelativeLayout
                        android:id="@+id/rl_NumOfSeats"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@id/rl_centrel"
                        android:padding="10dp">


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:paddingEnd="20dp"
                            android:text="Chỗ ngồi"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/txt_NumOfSeats"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@+id/btn_NumOfSeats"
                            android:text="Chọn"
                            android:textColor="@color/black" />

                        <ImageView
                            android:id="@+id/btn_NumOfSeats"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/baseline_navigate_next_24" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#888888" />

                    <RelativeLayout
                        android:id="@+id/rl_NumberPlate"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@id/rl_centrel"
                        android:padding="10dp">


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:paddingEnd="20dp"
                            android:text="Biển số xe"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/txt_NumberPlate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@+id/btn_NumberPlate"
                            android:text="Chọn"
                            android:textColor="@color/black" />

                        <ImageView
                            android:id="@+id/btn_NumberPlate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/baseline_navigate_next_24" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#888888" />

                    <RelativeLayout
                        android:id="@+id/rl_price"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@id/rl_centrel"
                        android:padding="10dp">


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:paddingEnd="20dp"
                            android:text="Giá"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/txt_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@+id/btn_price"
                            android:text="Chọn"
                            android:textColor="@color/black" />

                        <ImageView
                            android:id="@+id/btn_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/baseline_navigate_next_24" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#888888" />

                    <RelativeLayout
                        android:id="@+id/rl_location"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@id/rl_centrel"
                        android:padding="10dp">


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:paddingEnd="20dp"
                            android:text="Địa điểm giao xe"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/txt_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@+id/btn_location"
                            android:ellipsize="end"
                            android:maxWidth="150dp"
                            android:maxLines="1"
                            android:text="Chọn"
                            android:textColor="@color/black" />

                        <ImageView
                            android:id="@+id/btn_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/baseline_navigate_next_24" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#888888" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_horizontal"
                        android:text="Ảnh đầu xe"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/btn_firstImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:src="@drawable/baseline_add_24" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_horizontal"
                        android:text="Ảnh đuôi xe"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/btn_endImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:src="@drawable/baseline_add_24" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_horizontal"
                        android:text="Ảnh hông trái"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/btn_leftImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:src="@drawable/baseline_add_24" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_horizontal"
                        android:text="Ảnh hông phải"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/btn_rightImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:src="@drawable/baseline_add_24" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_themxe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/rounded_corner"
            android:text="Thêm xe"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:visibility="visible" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cap_nhat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/rounded_corner"
            android:text="Cập nhật"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:visibility="gone" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>