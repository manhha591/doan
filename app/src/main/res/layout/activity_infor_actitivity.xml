<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.InforActitivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="center_vertical"
            android:background="@color/brown">

            <TextView
                android:id="@+id/Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:gravity="start"
                android:text="Name"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_close"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"

                android:layout_marginRight="20dp"
                android:gravity="end"
                app:srcCompat="@drawable/baseline_close_24"
                app:tint="@android:color/white" />
        </RelativeLayout>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:background="#f3f3f3"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f3f3f3"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:background="#ffffff"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:paddingStart="3dp"
                    android:paddingEnd="3dp">


                    <RelativeLayout
                        android:id="@+id/rl_acc"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:clickable="true">

                        <ImageView
                            android:id="@+id/iv_acc"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/baseline_account_circle_24"
                            app:tint="#636363" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:layout_toEndOf="@+id/iv_acc"
                            android:text="Tài Khoản"
                            android:textColor="#636363"
                            android:textSize="20dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:background="#888888" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_my_car"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:clickable="true">

                        <ImageView
                            android:id="@+id/iv_my_car"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/baseline_directions_car_24"
                            app:tint="#636363" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:layout_toEndOf="@+id/iv_my_car"
                            android:text="Xe của tôi"
                            android:textColor="#636363"
                            android:textSize="20dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:background="#888888" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_my_wallet"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:visibility="gone"
                        android:clickable="true">

                        <ImageView
                            android:id="@+id/iv_wallet"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/baseline_account_balance_wallet_24"
                            app:tint="#636363" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:layout_toEndOf="@+id/iv_wallet"
                            android:text="Ví của tôi"
                            android:textColor="#636363"
                            android:textSize="20dp"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:background="#888888" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_my_trip"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:clickable="true">

                        <ImageView
                            android:id="@+id/iv_history"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/baseline_directions_car_24"
                            app:tint="#636363" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:layout_toEndOf="@+id/iv_history"
                            android:text="Lịch sử chuyến đi"
                            android:textColor="#636363"
                            android:textSize="20dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:background="#888888" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_instruct"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:clickable="true">

                        <ImageView
                            android:id="@+id/iv_instruct"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/baseline_integration_instructions_24"
                            app:tint="#636363" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:layout_toEndOf="@+id/iv_instruct"
                            android:text="Hướng dẫn"
                            android:textColor="#636363"
                            android:textSize="20dp" />


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"></LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:background="#ffffff"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <RelativeLayout
                    android:id="@+id/rl_logout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"

                    android:clickable="true">

                    <ImageView
                        android:id="@+id/iv_logout"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/baseline_exit_to_app_24"
                        app:tint="#636363" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@+id/iv_logout"
                        android:text="Log out"
                        android:textColor="#636363"
                        android:textSize="20dp" />


                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>